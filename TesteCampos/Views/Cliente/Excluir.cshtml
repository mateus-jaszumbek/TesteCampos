@model ClienteModel;
@{
    ViewData["title"] = "Excluir Cliente";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir de Emprestimo</h1>
    </div>

    <form method="post" asp-controller="Cliente" asp-action="Excluir">

        <input type="hidden" asp-for=idCliente />

        <h2 class="text-light">Tem certeza que deseja excluir o registro</h2>

        <div class="mb-3">
            <label for="NomeCliente" class="form-label text-light">Digite o seu Nome</label>
            <input type="text" class="form-control" asp-for="nmCliente" id="NomeCliente" placeholder="Digite o seu nome aqui" disabled>
            <span asp-validation-for="nmCliente" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="CidadeCLiente" class="form-label text-light">Cidade</label>
            <input type="text" class="form-control" asp-for="Cidade" id="CidadeCliente" placeholder="Digite a sua cidade" disabled>
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">
                <i class="bi bi-trash-fill"></i>
                Excluir
            </button>
            <a class="btn btn-primary w-50" asp-controller="Cliente" asp-action="Cliente">Voltar</a>
        </div>

    </form>
</div>