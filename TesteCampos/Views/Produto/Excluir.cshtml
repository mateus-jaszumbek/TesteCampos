@model ProdutoModel;
@{
    ViewData["title"] = "Excluir Produto";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Produtos</h1>
    </div>

    <form method="post" asp-controller="Produto" asp-action="Excluir">

        <input type="hidden" asp-for=idProduto />

        <div class="mb-3">
            <label for="dscProduto" class="form-label text-light">Digite a descrição do produto</label>
            <input type="text" class="form-control" asp-for="dscProduto" id="dscProduto" placeholder="Digite a descrição do produto">
            <span asp-validation-for="dscProduto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="vlrUnitario" class="form-label text-light">Digite o valor do Produto: R$</label>
            <input type="text" class="form-control" asp-for="vlrUnitario" id="vlrUnitario" placeholder="Digite o valor do Produto R$: ">
            <span asp-validation-for="vlrUnitario" class="text-danger"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">
                <i class="bi bi-trash-fill"></i>
                Excluir
            </button>
            <a class="btn btn-primary w-50" asp-controller="Produto" asp-action="Produto">Voltar</a>
        </div>

    </form>
</div>