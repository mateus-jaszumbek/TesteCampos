@model IEnumerable<ProdutoModel>;

<div class="container">
    <div class="d-flex justify-content-between aling-items-center mb-5">
        <h1>Cadastro de Produto</h1>
        <a class="btn btn-success mx-2" asp-controller="Produto" asp-action="Cadastrar">
            <i class="bi bi-file-earmark-plus"></i>
            Cadastrar um Novo Produto
        </a>
    </div>

    <table id="itens" class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Descrição de Produtos</th>
                <th scope="col">Valor Unitário</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var produto in Model)
                {
                    <tr>
                        <th scope="row">@produto.dscProduto</th>
                        <th>R$ @produto.vlrUnitario |</th>                        
                        <td>
                            <a asp-controller="Produto" asp-action="Editar" asp-route-id="@produto.idProduto" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Editar
                            </a>
                            <a asp-controller="Produto" asp-action="Excluir" asp-route-id="@produto.idProduto" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>