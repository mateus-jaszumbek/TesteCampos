@model VendaModel;
@{
    ViewData["title"] = "Cadastrar Venda";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastrar Venda</h1>
    </div>

    <form method="post" asp-controller="Venda" asp-action="Cadastrar">

        <div class="mb-3">
            <label for="qtdVenda" class="form-label text-light">Informe a quantidade de vendas</label>
            <input type="text" class="form-control" asp-for="qtdVenda" id="qtdVenda" placeholder="Informe a quantidade de vendas" >
            <span asp-validation-for="qtdVenda" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="vlrUnitarioVenda" class="form-label text-light">Digite o valor Unitário da Venda</label>
            <input type="text" class="form-control" asp-for="vlrUnitarioVenda" id="vlrUnitarioVenda" placeholder="Digite o valor Unitário da Venda" >
            <span asp-validation-for="vlrUnitarioVenda" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="vlrTotalVenda" class="form-label text-light">Informe o valor Total da Venda</label>
            <input type="text" class="form-control" asp-for="vlrTotalVenda" id="vlrTotalVenda" placeholder="Digite o valor Unitário da Venda" >
            <span asp-validation-for="vlrTotalVenda" class="text-danger"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Venda" asp-action="Venda">Voltar</a>
        </div>

    </form>
</div>