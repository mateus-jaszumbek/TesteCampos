@model IEnumerable<VendaModel>;

<div class="container">
    <div class="d-flex justify-content-between aling-items-center mb-5">
        <h1>Cadastrar uma nova venda</h1>
        <a class="btn btn-success mx-2" asp-controller="Venda" asp-action="Cadastrar">
            <i class="bi bi-file-earmark-plus"></i>
            Cadastrar uma nova venda
        </a>
    </div>

    <table id="itens" class="table table-dark table-hover">

        <thead>
            <tr>
                <th scope="col">Quantidade de Vendas</th>
                <th scope="col">Valor Unitário</th>
                <th scope="col">Data de venda</th>
                <th scope="col">Valor total de venda</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var venda in Model)
                {
                    <tr>
                        <th scope="row">@venda.qtdVenda |</th>
                        <th>@venda.dthVenda |</th>
                        <td>R$ @venda.vlrUnitarioVenda |</td>
                        <th>R$ @venda.vlrTotalVenda |</th>
                        <td>
                            <a asp-controller="Venda" asp-action="Editar" asp-route-id="@venda.idVenda" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Editar
                            </a>
                            <a asp-controller="Venda" asp-action="Excluir" asp-route-id="@venda.idVenda" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>

</div>